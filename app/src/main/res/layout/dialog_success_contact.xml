<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/profile_header_height"
        android:layout_height="@dimen/profile_header_height"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imgcross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5dp"
            android:src="@mipmap/close_dark_grey" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/green_tick" />

            <com.fitsoo.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgTick"
                android:layout_centerHorizontal="true"
                android:tag="100"
                android:layout_marginTop="@dimen/_10dp"
                android:gravity="center_horizontal"
                android:text="Thanks for your message,\nwe will contact you soon"
                android:textColor="@color/black" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>