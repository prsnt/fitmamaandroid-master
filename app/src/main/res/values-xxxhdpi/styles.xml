    <style name="SwitchCompatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="colorAccent">@color/switch_green</item>-->
        <!--<item name="colorControlActivated">@color/switch_green</item>-->
        <item name="colorAccent">@color/dark_green</item>
    </style>


</resources>
